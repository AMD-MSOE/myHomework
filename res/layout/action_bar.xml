<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="#0000FF"
    android:orientation="vertical" >
    
    <Button android:id="@+id/btn_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:drawableTop="@drawable/icon_plus_2x"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="rightButtonClicked" />
    
    <Button android:id="@+id/btn_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:drawableTop="@drawable/icon_arrow_back_2x"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="leftButtonClicked" />
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_toRightOf="@id/btn_left"
        android:layout_toLeftOf="@id/btn_right" />
    

</RelativeLayout>