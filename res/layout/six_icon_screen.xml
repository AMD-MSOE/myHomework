<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
    <include android:id="@+id/activity_main_action_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/action_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:context=".MainActivity" />
    
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TableRow
            android:id="@+id/tableRow1">
            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:contentDescription="@+string/Calendar"
                android:src="@drawable/calendar"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/homeworkButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:contentDescription="@+string/Homework"
                android:src="@drawable/homework"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/classesButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:contentDescription="@+string/Classes"
                android:src="@drawable/classes"
                android:scaleType="fitCenter"
                android:background="@null"/>
          </TableRow>
          
        <TableRow
            android:id="@+id/tableRow2">
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:src="@drawable/icon_settings"
                android:background="@null"
                android:contentDescription="@+string/Settings"/>
            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:contentDescription="@+string/Account"/>
            <ImageButton
                android:id="@+id/aboutButton"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="10"
                android:contentDescription="@+string/About"
                android:src="@drawable/question_mark"
                android:scaleType="fitCenter"
                android:background="@null" />
            
          </TableRow>
     
        
    </TableLayout>

</LinearLayout>
